@model bdlSecurity.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";

}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container-fluid">
    <div class="col-sm-12 col-sm-offset-4 row">
            <h3>Login</h3>
            <form method="post" novalidate>
                <div class="form-group">
                    <label asp-for="UserName" class="form-control-static">User Name</label>
                    <input asp-for="UserName" type="text" class="form-control" />
                    <span asp-validation-for="UserName" class="alert-info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-control-static">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="alert-info"></span>
                </div>
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="alert-info"></div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit" value="Login">Login</button>
                    <button class="btn btn-info" value="Cancel">Cancel</button>
                </div>
            </form>
    </div>
</div>