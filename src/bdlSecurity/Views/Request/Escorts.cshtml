@model bdlSecurity.ViewModels.SingleRequestViewModel
@{
    ViewBag.Title = "New Escort";

}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h3>@ViewBag.Message</h3>

<div class="row">
    <form method="post" novalidate>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="alert-info"></div>
        <div class="row form-group-sm">
            <label class="col-sm-3 form-control-static">Requestor Badge Number</label>
            <div class="col-sm-9">
                <label class="form-control-static">@Model.Request.RequestorBadgeNumber</label>
            </div>
        </div>
        <div class="row form-group-sm">
            <label class="col-sm-3 form-control-static">Request Date</label>
            <div class="col-sm-9">
                <label class="form-control-static">@Model.Request.RequestDate.ToString("MM/dd/yyyy")</label>
            </div>
        </div>
        <table class="table table-striped table-bordered table-responsive text-nowrap">
            <tr>
                <th>Escort No</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Company</th>
                <th>Badge Number</th>
                <th>Phone</th>
                <td></td>

            </tr>
            @foreach (var e in Model.Request.RequestEscorts)
            {
                <tr>
                    <td>@e.EscortNo</td>
                    <td>@e.lname</td>
                    <td>@e.fname</td>
                    <td>@e.mname</td>
                    <td>@e.Company</td>
                    <td>@e.BadgeNo</td>
                    <td>@e.Phone</td>
                    <td><a asp-controller="Request" asp-action="EditEscort" asp-route-requestid="@e.RequestID" asp-route-escortno="@e.EscortNo" asp-route-page="@ViewBag.Page" asp-route-returnAction="@ViewBag.ReturnAction" class="btn-sm btn-info">Edit</a></td>
                </tr>
            }
        </table>
        <div class="text-center">
            <a asp-controller="Request" asp-action="AddEscort" asp-route-requestid="@Model.Request.RequestID" asp-route-page="@ViewBag.Page" asp-route-returnAction="@Model.ReturnAction" class="btn-sm btn-info">Add</a>
            <a asp-controller="Request" asp-action="@Model.ReturnAction" asp-route-requestid="@Model.Request.RequestID" asp-route-page="@ViewBag.Page" class="btn-sm btn-info">Return</a>
        </div>
    </form>
</div>